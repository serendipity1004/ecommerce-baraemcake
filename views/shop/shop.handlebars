<section id="content">

    <div class="content-wrap">

        <div class="container clearfix">

            <!-- Portfolio Filter
            ============================================= -->
            <div id="portfolio-shuffle" class="portfolio-shuffle" data-container="#portfolio">
                <i class="icon-random"></i>
            </div>

            <div class="clear"></div>

            <!-- Portfolio Items
            ============================================= -->
            <div id="portfolio" class="portfolio grid-container portfolio-2 portfolio-nomargin clearfix">

                {{#each products}}
                    <article class="portfolio-item pf-media pf-icons">
                        <div class="portfolio-image ld-over">
                            <a href="portfolio-single.html">
                                <img src="{{largeImagePath}}" alt="Open Imagination">
                            </a>
                            <div class="ld ld-ring ld-spin"></div>
                            <div class="portfolio-overlay">
                                <div class="portfolio-desc">
                                    <h3><a href="/shop/details/{{_id}}">{{name}}</a></h3>
                                    <span>&#x20A9; {{price}}</span>
                                </div>
                                <input class="product-id" type="hidden" value="{{_id}}">
                                <a href="/shop/details/{{_id}}" class="left-icon"><i class="icon-shopping-cart"></i></a>
                                <a href="/shop/details/?id={{_id}}" class="right-icon"><i
                                        class="icon-line-ellipsis"></i></a>
                            </div>
                        </div>
                    </article>
                {{/each}}
            </div><!-- #portfolio end -->

        </div>

    </div>

</section><!-- #content end -->
